/* pages/subpackages/mall/product/productDetailTypeOne/index.wxss */
.swiper{
    width: 100%;
    height: 420rpx;
}
.grid-container{
    background-color: white;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items:center;
    justify-content: center;
}
.inner-container{
    width:730rpx !important;
    /*height:300rpx;*/
    /*border:1px dashed #DCEBE6;*/
  }
.grid-item{
    width:200rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
}
.grid-item .img{
    width: 40rpx;
    height: 40rpx;
}
.grid-item .text{
    margin-left:10rpx;
    font-size:26rpx;
    font-weight: bold;
    color:#333333;

}

.list-container{
    background-color: white;
    padding: 10rpx;
}

.list-item-container{
    display: flex;
    flex-direction: row;
}
.list-item-container .left{
    flex: 1;
    font-size:26rpx;
    color:#333333;
}
.list-item-container .right{
    flex: 4;
    font-size:26rpx;
    font-weight: bold;
    color:#333333;
}


.intro {
    margin: 5px;
    text-align: center;
    /*overflow: scroll;*/
    /*box-sizing: content-box !important;*/
}
.my-class{
    color:black;
    background-color: #DCEBE6;
}
.my-class-row:nth-child(odd){
    color: black;
    background-color: white;
}
