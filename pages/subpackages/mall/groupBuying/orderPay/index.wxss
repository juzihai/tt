/* pages/subpackages/mall/product/order/index.wxss */

.address-container {
    box-sizing: border-box;
    background-color: white;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 20rpx;
    padding: 20rpx;
    border-radius: 20rpx;
}

.gogo-container {
    background-color: white;
    margin: 20rpx;
    padding: 0px 20rpx;
    border-radius: 20rpx;
}

.center {
    flex: 4;
    display: flex;
    flex-direction: column;
}

.subtitle {
    color: #999;
    font-size: 28rpx;
    font-weight: 400;
    margin-top: 20rpx;
    margin-bottom: 16rpx;
}

.action {
    flex: 1;
    /* width: 78rpx;
      height: 120rpx; *//* border-left: 2rpx dashed #F5F5F5; */
    display: flex;
    justify-content: center;
    align-items: center;
}

.left-card {
    width: 150rpx !important;
    height: 150rpx !important;
}

.avter-share-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.like-container {
    display: flex;
    flex-direction: row;
    margin-left: 40rpx;
    align-items: center;
}

.number {
    color: #666;
    font-size: 24rpx;
    margin-left: 12rpx;
}

.l-right-class {
    display: flex;
    flex-direction: row;
    /* justify-content: space-between; */
    align-items: center;
}

.tapbar {
    background-color: white;
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.button {
    margin: 0px 10px;
}
