/* pages/navigator/mine/index.wxss */

page{
  background-color: white;
}
.content{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.topimg{
  width: 100%;

}
.top-bg{
  width: 100%;
  height: 300rpx;
  position: absolute;
  z-index: -1;
}
/* 用户信息 */
.person{
  display: flex;
  flex-direction: row;
  margin-top: 60rpx;
  margin-left: 70rpx;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-bottom: 20px;
}
.name{
  color: white;
  margin: 10rpx;
}
.userinfo{
  display: flex;
  flex-direction: column;
}
.userinfo text{
  color: white;
  margin: 10rpx;
}
/* 功能块 */
.function{
  width: 90%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 5%;
  background-color: white;
}
.moudView{
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx 0;
}
.moudImg{
 width: 50rpx;
 height: 50rpx;
 margin: 5rpx;
}
.moudView text{
  margin-top: 20rpx;
  font-size: 28rpx;
  color: gray;
}

/* 签到块 */
.signIn{
  width: 100%;
  height: 150rpx;
  margin-bottom: 20rpx;
  background-color: black;
  display: flex;
  flex-direction: row;
  align-items: center;
}
  
.sign_pic{
  width: 90rpx;
  height: 90rpx;
  margin-left: 20rpx;
}
.sign{
  display: flex;
  flex-direction: row;
  
}
.signIn_text{
  display: flex;
  flex-direction: column;
  color: white;
  margin-left: 20rpx;
}
.sign_btn{
  margin-left: 60rpx;
}
.signBtn{
  border-radius: 100rpx;
  background-color: orange;
  color: white;
}

/* 列表 */
.list{
  display: flex;
  flex-direction: column;
}
.list_item{
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: white;
  border-bottom: 1rpx solid rgb(228, 226, 226);
  align-content: center;
}
.item_name{
  line-height: 90rpx;
  padding-left: 20rpx;
  flex: 9;
}
.arrow{
  width: 30rpx;
  height: 30rpx;
  margin: 30rpx 30rpx 0 0;
  flex: 0.5;
}

.changeBtn{
  margin:20rpx 60rpx;
}
.btnuser{
  background-color: black;
  color: white;
}

.top-img {
  width: 120rpx;
  height: 184rpx;
}
.status-text {
  font-size: 30rpx;
  color: #45526b;
  margin-top: 40rpx;
}

.button_margin_top {
  margin-top: 80rpx;
}

.custom-container{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.custom-img{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx
}

.custom-txt{
  padding: 20rpx;
  color: #bbb;
  font-size: 20rpx;
}

/* 悬浮会话 */

.contact-content {
  margin-bottom: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
  /* line-height: 92rpx */
  position: fixed;
  right: 40rpx;
  bottom: 160rpx;
  z-index: 2;
}

.contact-share-box {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  box-shadow: 0px 1px 8px 0px rgba(220, 220, 220, 0.5);
}